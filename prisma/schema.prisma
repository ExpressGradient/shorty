// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  shortcuts Shortcut[]

  @@map("users")
}

model Shortcut {
  id          Int      @id @default(autoincrement())
  destination String
  shortcut    String
  tags        Tag[]
  description String?
  user        User     @relation(references: [id], fields: [userId])
  userId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  records     Record[]

  @@unique([shortcut, userId])
  @@map("shortcuts")
}

model Tag {
  id        Int        @id @default(autoincrement())
  tag       String
  shortcuts Shortcut[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())

  @@map("tags")
}

model Record {
  id         Int      @id @default(autoincrement())
  shortcut   Shortcut @relation(references: [id], fields: [shortcutId])
  shortcutId Int
  accessedAt DateTime @default(now())
}
